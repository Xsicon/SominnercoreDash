@page "/forgot-password"
@layout AuthLayout
@rendermode InteractiveServer
@using SominnercoreDash.Services
@inject SupabaseAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<ForgotPassword> Logger

<PageTitle>Forgot Password - SominnercoreDash</PageTitle>

<div class="rp-container">
    <!-- Gradient Background Effects -->
    <div class="rp-gradient-bg">
        <div class="rp-gradient-orb rp-gradient-orb-1"></div>
        <div class="rp-gradient-orb rp-gradient-orb-2"></div>
    </div>

    <!-- Main Card -->
    <div class="rp-card">
        <!-- Header -->
        <div class="rp-header">
            <div class="rp-brand-section">
                <div class="rp-brand-icon">
                    <span class="material-symbols-outlined">mail</span>
                </div>
                <span class="rp-brand-name">Sominnercore</span>
            </div>
            <h1 class="rp-title">Forgot your password?</h1>
            <p class="rp-subtitle">
                No worries! Enter your email address and we'll send you a link to reset your password.
            </p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="rp-alert rp-alert-error" style="margin: 0 2rem;">
                <span class="material-symbols-outlined">error</span>
                <span>@errorMessage</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="rp-alert rp-alert-success" style="margin: 0 2rem;">
                <span class="material-symbols-outlined">check_circle</span>
                <span>@successMessage</span>
            </div>
        }

        @if (!emailSent)
        {
            <!-- Form -->
            <form @onsubmit="HandleForgotPassword" class="rp-form">
                <!-- Email Field -->
                <div class="rp-form-group">
                    <label class="rp-form-label">Email Address</label>
                    <div class="rp-input-wrapper">
                        <span class="material-symbols-outlined rp-input-icon">mail</span>
                        <input @bind="email" 
                               type="email"
                               class="rp-form-input" 
                               placeholder="name@company.com"
                               disabled="@isLoading"
                               required />
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="rp-btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="rp-loading-spinner"></span>
                        <span>Sending Reset Link...</span>
                    }
                    else
                    {
                        <span>Send Reset Link</span>
                        <span class="material-symbols-outlined">arrow_forward</span>
                    }
                </button>
            </form>
        }
        else
        {
            <!-- Success State -->
            <div class="rp-form" style="text-align: center; padding: 2rem;">
                <div style="display: flex; justify-content: center; margin-bottom: 1.5rem;">
                    <div style="width: 4rem; height: 4rem; border-radius: 50%; background-color: rgba(16, 185, 129, 0.1); display: flex; align-items: center; justify-content: center;">
                        <span class="material-symbols-outlined" style="font-size: 2rem; color: #10b981; font-variation-settings: 'FILL' 1;">mark_email_read</span>
                    </div>
                </div>
                <h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; color: var(--rp-text-light);">Check your email</h3>
                <p style="font-size: 0.875rem; color: var(--rp-text-muted-light); line-height: 1.5;">
                    We've sent a password reset link to <strong>@email</strong>. Please check your inbox and follow the instructions.
                </p>
                <p style="font-size: 0.75rem; color: var(--rp-text-muted-light); margin-top: 1rem;">
                    Didn't receive the email? Check your spam folder or <button type="button" @onclick="ResetForm" class="rp-link-primary" style="background: none; border: none; cursor: pointer; text-decoration: underline;">try again</button>.
                </p>
            </div>
        }

        <!-- Back to Login -->
        <div class="rp-footer">
            <a href="/signin" class="rp-back-link">
                <span class="material-symbols-outlined">arrow_back</span>
                <span>Back to Login</span>
            </a>
        </div>
    </div>

    <!-- Bottom Links -->
    <div class="rp-bottom-links">
        <a href="/privacy" class="rp-bottom-link">Privacy Policy</a>
        <a href="/help" class="rp-bottom-link">Help Center</a>
    </div>
</div>

@code {
    private string email = string.Empty;
    private bool isLoading = false;
    private bool emailSent = false;
    private string? errorMessage;
    private string? successMessage;

    private async Task HandleForgotPassword()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            successMessage = null;
            StateHasChanged();

            if (string.IsNullOrWhiteSpace(email))
            {
                errorMessage = "Please enter your email address";
                return;
            }

            Logger.LogInformation("Requesting password reset for: {Email}", email);

            var response = await AuthService.ForgotPasswordAsync(email.Trim());

            if (response.Success)
            {
                Logger.LogInformation("✅ Password reset email sent");
                emailSent = true;
                successMessage = response.Message;
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to send reset link. Please try again.";
                Logger.LogWarning("⚠️ Password reset request failed: {Error}", errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Unexpected error during password reset request");
            errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ResetForm()
    {
        emailSent = false;
        errorMessage = null;
        successMessage = null;
    }
}
